-if @is_index.to_s.downcase == "true"
  :plain
    $("#friend-status-#{@user.id}").
        html("#{escape_javascript(render('users/add_friend', user: @user, 
                                          is_index: @is_index))}")
-else
  :plain
    $("#friend-status-#{@user.id}").closest("li").fadeOut(300, function() {
      $(this).remove();
      $(window).trigger('contentSizeReduced');
    });
-if @unfriend.to_s.downcase == "true"
  :plain
    $("#friend-count").html("(#{current_user.friends.count})")