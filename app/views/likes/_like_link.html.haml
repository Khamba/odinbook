- like = find_like(likeable_id, likeable_type)

- if like.nil? # current user hasn't liked this likeable object
  = link_to "Like", likes_path(likeable_id: likeable_id, 
                               likeable_type: likeable_type), 
                    title: "Like this #{likeable_type.downcase}",
                    method: :post, remote: true
- else
  = link_to "Unlike", like, title: "Unlike this #{likeable_type.downcase}",
                            method: :delete, remote: true
