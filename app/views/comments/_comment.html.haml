- commenter = comment.commenter
%li.comment-container{ id: "comment-#{ comment.id }" }
  .comment-details
    = render "comments/comment_delete", comment: comment, commenter: commenter

    = link_to timeline_path(commenter) do
      = image_for(commenter, options = { img_class: "sm-img"})
    .info
      = link_to "#{commenter.name}", timeline_path(commenter)
      %span= comment.content

      %p
        = format_datetime(comment.created_at)

        %span.dot= "."
        %span.comment-like{ id: "comment-#{comment.id}-like" }
          = render "likes/like_link", likeable_id: comment.id, 
                                      likeable_type: "Comment"

        %span{ id: "comment-#{comment.id}-likers"}
          = render "comments/comment_likers", comment: comment
